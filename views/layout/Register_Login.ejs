<!--Register&Login Modal-->
<div class="modal fade Register_Login" id="Login" role="dialog">
    <div class="modal-dialog Register_Login">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <img class="logo" src="/image/logo.png">
         </div>
         <!--Modal Body-->
         <div class="modal-body">
           <div class="box">
                <div class="content">
                   <div class="social">
                       <a id="google_register" class="google" href="/">
                           用 Google 帳號登入
                       </a>
                       <a id="facebook_register" class="facebook" href="/">
                           用 Facebook 帳號登入
                       </a>

                   </div>
                </div>
            </div>
        </div>

        <form id"login" class="four">
            <p>或使用 Fourman 帳號登入</p>
           <ul>
               <input id="login-id" class="login id" type="text" placeholder="帳號" name="login-id">
               <input id="password" class="login password" type="password" placeholder="密碼" name="password">
           </ul>
           <input type="submit" class="btn-default btn btn-login"  name="button" value="登入">
           <div class"login-help">
             <div class"login-problem">
               <a id"forget password" href="/">忘記密碼</a>
               <a id"resend email" href="/">重寄認證信</a>
             </div>
           </div>
       </form>

      </div>
    </div>
  </div>
</div>
